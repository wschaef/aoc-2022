{
    "include": [
        "src/**/*"
    ],
    "compilerOptions": {
        
        "lib": ["es2021"],
        "module": "commonjs",
        "target": "es2021",
    
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,

        "noImplicitAny": true,
        "outDir": "./dist",
        "sourceMap": true,

    }
}