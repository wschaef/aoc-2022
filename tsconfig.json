{
    "include": [
        "src/**/*"
    ],
    "compilerOptions": {
        "lib": [
            "es2021"
        ],
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "target": "es2021",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "outDir": "./dist",
        "sourceMap": true,
    }
}